{
    "manifest_version": 3,
    "name": "English Learning Assistant",
    "version": "1.0.0",
    "description": "Smart Dictionary, TTS, and Vocabulary Book",
    "permissions": [
        "sidePanel",
        "storage",
        "contextMenus",
        "activeTab",
        "scripting",
        "tts"
    ],
    "background": {
        "service_worker": "src/background/index.ts",
        "type": "module"
    },
    "action": {
        "default_title": "Open Assistant"
    },
    "side_panel": {
        "default_path": "sidepanel.html"
    },
    "options_ui": {
        "page": "src/options/index.html",
        "open_in_tab": true
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "content_scripts": [
        {
            "js": [
                "src/content/index.ts"
            ],
            "matches": [
                "<all_urls>"
            ],
            "run_at": "document_end"
        }
    ]
}
